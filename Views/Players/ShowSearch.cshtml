@model List<string>

@{
    // Filter player names based on the string in the search bar
    string searchString = ViewBag.SearchString as string ?? "";
    var filteredIgns = Model.Where(Ign => Ign.StartsWith(searchString, StringComparison.OrdinalIgnoreCase)).ToList();
}

<h4>Search</h4>
<hr />

<h6>Player Search</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplayPlayerSearchResult">
            <div class="form-group">
                <label for="searchString" class="control-label"></label>
                <input name="searchString" id="searchInput" class="form-control" autocomplete="off" list="suggestionsList" />
                <datalist id="suggestionsList">
                    @foreach (string playerName in filteredIgns)
                    {
                        <option value="@playerName"></option>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<h6 style="margin-top:2cm;">Team Search</h6>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DisplayTeamSearchResult">
            <div class="form-group">
                <label for="SearchPhrase" class="control-label"></label>
                @Html.DropDownList("SearchPhrase", ViewBag.Teams, "Select Team", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>